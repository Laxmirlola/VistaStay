  <style>
    .slider-container {
      display: flex;
      align-items: center;
      position: relative;
      width: 80%;
      margin-left: 0.5rem;
      margin-right: 0.5rem;
      max-width: 1200px;
      overflow: hidden;
      background-color: #fff;
      border-radius: 10px;
      /* box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); */
    }

    .slider {
      display: flex;
      height: 5rem;
      gap: 20px;
      padding: 8px;

      overflow-x: auto;
      scroll-behavior: smooth;
      scrollbar-width: none; /* Hide scrollbar for Firefox */
    }

    .slider::-webkit-scrollbar {
      display: none; /* Hide scrollbar for Chrome, Safari, and Edge */
    }

    /* Slider Item */
    .slider-item {
      display: flex;
      margin-top: 0.5rem;
      flex-direction: column;
      align-items: center;
      min-width: 100px;
      text-align: center;
      color: #555;
    }

    .slider-item .icon {
      font-size: 1rem;
    }

    .slider-item p {
      font-size: 0.8rem;
    }

    @media (max-width: 768px) {
      .slider-container {
        width: 90%;
      }

      .slider-item {
        min-width: 80px;
      }
    }

    .tax-info {
      display: none;
    }

    .form-check {
      margin-left: 0.8rem;
    }
    .slider {
