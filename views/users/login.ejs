<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login On VistaStay</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          class="form-control"
          name="username"
          id="username"
          type="text"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          class="form-control"
          name="password"
          id="password"
          type="password"
          required
        />
      </div>
      <button class="btn" style="background-color: #e72323">Login</button>
      <br />
      <br />
    </form>
  </div>
</div>
