<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      .form-inline {
        display: flex;
      }

      .navbar-brand {
        font-size: 1.5rem;
        color: red;
      }
      .btn-search {
        background-color: #fe424d;
        color: #fff;
        border-radius: 2rem;
        padding-right: 1rem;
        padding-left: 1rem;
      }
      .inp-search {
        border-radius: 1rem;
        padding: 0.5rem 2rem 0.5rem 2rem;
        font-size: 1rem;
      }
      .btn-search i {
        display: inline;
        margin-right: 0.6rem;
      }
      .btn-search:hover {
        background-color: #fe424d;
        color: #fff;
      }
      .color {
        color: #fe424d;
      }
      .filter {
        display: flex;
        align-items: center;
        justify-content: center;
        size: 1.5rem;
        height: 3rem;
        width: 3rem;
        border: 0.5px solid rgb(104, 103, 103);
        border-radius: 50%;
        padding: 1rem;
        text-align: center;
        margin: 2rem;
        opacity: 0.7;
        margin: 5px;
      }
      /* Adjust filter button size on small screens */
      @media (max-width: 780px) {
        .filter {
          height: 2.5rem;
          width: 2.5rem;
        }
        .inp-search {
          font-size: 0.9rem;
          padding: 0.4rem 1rem;
        }
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md bg-light border-bottom sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/listings"
          ><i class="fa-regular fa-compass"></i
        ></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/listings">Explore</a>
          </div>
          <div class="navbar-nav ms-auto">
            <form class="form-inline">
              <input
                class="form-control inp-search"
                type="search"
                id="search"
                placeholder="Search destinations"
              />
              <button id="search-btn" class="btn btn-search" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>Search
              </button>
            </form>
          </div>
          <button
            type="button"
            class="fa-solid fa-sliders filter"
            data-bs-toggle="modal"
            data-bs-target="#exampleModalCenter"
          ></button>
          <div class="navbar-nav ms-auto">
            <a class="nav-link" href="/listings/new">Airbnb your home</a>

            <div class="btn-group">
              <button
                type="button"
                class="btn btn-secondary dropdown-toggle"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <i class="fa-solid fa-user"></i>
              </button>
              <div class="dropdown-menu dropdown-menu-right">
                <% if(!currentUser) { %>

                <a class="dropdown-item" href="/signup"><b>SignUp</b></a>
                <a class="dropdown-item" href="/login"><b>Login</b></a>
                <% } %> <% if(currentUser) { %>
                <a class="dropdown-item" href="/logout"><b>Log out</b></a>
                <% } %>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/listings/new"
                  >Airbnb your home</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListings) { %> <% if(listing.title===query) {%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_img"
            style="margin: 0; height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p
              class="card-text"
              style="
                display: flex;
                justify-content: space-between;
                align-items: center;
              "
            >
              <b><%= listing.title %></b>
              <i
                class="fa-regular fa-heart"
                style="font-size: 1.5rem; margin-top: 2px; margin-right: 4px"
              ></i>
            </p>

            <p class="card-text">
              <b> &#8377;<%=listing.price.toLocaleString("en-IN")%></b>/night<i
                class="tax-info"
                >&nbsp;+18% GST
              </i>
            </p>
          </div>
        </div>
      </a>
      <% } %> <% } %>
    </div>

    <%- include("../includes/ai.ejs") %>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModalCenter"
      tabindex="-1"
      aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">Filters</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <h4>Type</h4>
            <%- include("../includes/modal.ejs") %>
            <hr />
            <h4>Price range</h4>
            <h6 style="color: rgb(86, 88, 88)">
              Nightly prices before fees and taxes
            </h6>
            <input
              type="range"
              class="form-range"
              min="1000"
              max="50000"
              step="2000"
              id="customRange3"
            />
            <hr />
            <h3>Rating</h3>
            <input
              type="range"
              class="form-range"
              min="0"
              max="5"
              id="customRange2"
            />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-dismiss="modal"
            >
              Apply filters
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
