      /* Card container */
      .reservation-card {
        width: 340px;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 12px;
        padding: 20px;

        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      /* Price per night */
      .price {
        font-size: 1.5rem;
        font-weight: bold;
      }

      .price span {
        font-size: 1rem;
        font-weight: normal;
        color: #555;
      }

      /* Date container */
      .date-container {
        display: flex;
        justify-content: space-between;
        margin: 15px 0;
        border: 1px solid #ddd;
        border-radius: 8px;
      }

      .date {
        padding: 10px;
        flex: 1;
        text-align: left;
        border-right: 1px solid #ddd;
      }

      .date:last-child {
        border-right: none;
      }

      .date label {
        display: block;
        font-size: 0.8rem;
        font-weight: bold;
        color: #555;
      }

      .date input {
        border: none;
        font-size: 0.9rem;
        color: #333;
        outline: none;
        margin-top: 5px;
      }

      /* Guests dropdown */
      .guests {
        border: 1px solid #ddd;
        width: 100%;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: #555;
      }

      /* Reserve button */
      .reserve-btn {
        background-color: #ff385c;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 12px;
        text-align: center;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        margin: 0;
        /* margin-bottom: 10px; */
        transition: background-color 0.3s;
      }

      .reserve-btn:hover {
        background-color: #e63150;
      }

      /* Price breakdown */
      .price-breakdown {
        font-size: 0.9rem;
        color: #333;
      }

      .price-breakdown div {
        display: flex;
        justify-content: space-between;
        margin: 10px 0;
      }

      .total {
        font-weight: bold;
        border-top: 1px solid #ddd;
        padding-top: 10px;
      }

      a {
        color: #0073e6;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <div class="reservation-card">
      <!-- Price per night -->
      <div class="price">
        &#8377;<%=listing.price.toLocaleString("en-IN")%><span>/night</span>
      </div>

      <!-- Check-in / Check-out -->
      <div class="date-container">
        <div class="date">
          <label for="checkin">CHECK-IN</label>
          <input type="date" id="checkin" />
        </div>
        <div class="date">
          <label for="checkout">CHECKOUT</label>
          <input type="date" id="checkout" />
        </div>
      </div>

      <!-- Guests -->
      <div>
        <select
          class="guests"
          name="guests"
          id="guests"
          aria-placeholder="Guests"
        >
          <option value="one">1 person</option>
          <option value="two">2 person</option>
          <option value="three">3 person</option>
          <option value="more">4 person or more</option>
        </select>
      </div>

      <!-- Reserve button -->
      <button class="reserve-btn">Reserve</button>
      <p style="font-size: 0.8rem; color: #555; text-align: center">
        (You won't be charged yet)
      </p>

      <!-- Price breakdown -->
      <div class="price-breakdown">
        <div>
          <span>
            &#8377;<%=listing.price.toLocaleString("en-IN")%>x 1night</span
          >
          <span> &#8377;<%=listing.price.toLocaleString("en-IN")%></span>
        </div>
        <div>
          <a href="#">Airbnb service fee</a>
          <span>₹2,118</span>
        </div>
        <div class="total">
          <span>Total before taxes</span>
          <span id="total">&#8377&#8377&#8377&#8377</span>
        </div>
      </div>
    </div>
  </body>
